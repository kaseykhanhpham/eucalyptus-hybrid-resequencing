Rscript "$SCRIPT_DIR"/summarize_stat_distr.r "$WDIR"/cord_dxy_windows.tab Dxy 25
# Tajima's D
Rscript "$SCRIPT_DIR"/summarize_stat_distr.r "$WDIR"/glob_deta_windows.tab D 25
# FST
Rscript "$SCRIPT_DIR"/summarize_stat_distr.r "$WDIR"/glob_deta_windows.tab FST 25
